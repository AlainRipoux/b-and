<div class="container chatroom">
  <h3>
  <% if @invite.first_user == current_user %>
    <%= link_to @invite.second_user.nickname, user_path(@invite.second_user) %>
  <% else %>
    <%= link_to @invite.first_user.nickname, user_path(@invite.first_user) %>
  <% end %>
  </h3>
  <div class="messages">
    <% @invite.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= link_to message.user.nickname, user_path(message.user) %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
</div>

<%= render 'messages/form', invite: @invite, user: current_user, band_message: @band_messages %>
