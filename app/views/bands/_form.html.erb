<div class = "container">
  <%= simple_form_for [ @band ] do |f| %>
    <%= f.input :name %>
    <%= f.association :user, collection: @mates, label_method: :firstname, value_method: :id, multiple: true %>
    <%# <%= f.collection_select(:user, @users, :firstname, :id, {:prompt => "Please Select a Sector"}, {:multiple => true}) %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create my band" %>
  <% end %>
</div>
