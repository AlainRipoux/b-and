<div class="modal fade" id="invite" tabindex="-1" role="dialog" aria-labelledby="inviteLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="invitteLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [ band ] do |f| %>
          <% @mates.sort_by(&:firstname).each do |mate| %>
              <% if band.users.include?(mate) %>
                <%= f.association :user, as: :check_boxes, collection: [mate], legend_html: {class: "d-none"}, label_method: :firstname, value_method: :id, multiple: true, class: 'dropdown-menu', input_html: {checked: true} %>
              <% else %>
                <%= f.association :user, as: :check_boxes, collection: [mate], label_method: :firstname, value_method: :id, multiple: true, class: 'dropdown-menu' %>
              <% end %>
            <% end %>

          <%= f.submit "Invite", class: "btn btn-primary mb-3" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
