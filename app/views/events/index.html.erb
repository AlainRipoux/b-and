<div class="container">

  <h1 class="mb-5">Events</h1>

  <div class="m-3 my-5">
    <% if @events.any? %>
      <% @events.sort_by(&:created_at).each do |event| %>
        <li class="cards list-unstyled my-4 d-flex">
              <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg)">
                <%= link_to event.name, event_path(event) %>
                <div class="d-flex">
                  <p class="tag_instru"><%= event.address %></p>
                </div>
              </div>
        </li>
      <% end %>
    <% else %>
      <p class="text-center">Sorry, there is no event yet.</p>
    <% end %>

  </div>

</div>

