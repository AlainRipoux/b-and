<div class="container">
  <%= simple_form_for [ @band, @event ] do |f| %>
    <%= f.input :private_event, as: :boolean, include_hidden: true %>
    <%= f.input :category, collection: ["Rehearsal", "Gig"] %>
    <%= f.input :photo, as: :file%>
    <%= f.input :name %>
    <%= f.input :address,
      input_html: {data: {address_autocomplete_target: "address", class: "d-none"}},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
    %>
    
    <%= f.input :start_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :end_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :description, as: :text %>
    <%= f.submit "New event", class: "d-grid gap-2 col-12 mx-auto btn btn-primary long-btn" %>
  <% end %>
</div>
