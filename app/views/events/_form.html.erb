<div class="container">
  <%= simple_form_for [ @band, @event ] do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :category %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.submit "New event", class: "btn btn-primary long-btn" %>
  <% end %>
</div>
