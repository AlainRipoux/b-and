<div class="container">
  <%= simple_form_for [ @band, @event ] do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :category %>
    <%= f.input :start_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :end_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
    <%= f.submit "New event", class: "d-grid gap-2 col-12 mx-auto btn btn-primary long-btn" %>
  <% end %>
</div>
