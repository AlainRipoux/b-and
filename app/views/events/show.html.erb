<div class="container">
  <div class="mx-4">

    <div class="d-flex mt-5">
      <%= link_to :back do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>

      <div class="col mx-auto mb-3 text-end">
        <% if policy(@event).edit? %>
          <%= link_to edit_event_path(@event) do%>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
        <% else %>
            <%# <i class="fa-regular fa-star"></i> %>
        <% end %>
      </div>
    </div>

    <h1><%= @event.name %></h1>
    <p class="opacity-50"><%= @event.private_event ? "Private" : "Public" %> <%= @event.category %></p>

    <div class="d-flex mt-4">
        <div class="">
        Start:
        <p class="tag-green"><%= @event.start_date %></p>
        </div>
        <div class="ms-3">
        End:
        <p class="tag-green"><%= @event.end_date %></p>
      </div>
    </div>


    <div class="d-flex">
      <div class="mt-4">
        <h4>Location</h4>
        <p class="tag-green"><%= @event.address %></p>
      </div>

      <div class="mt-4 ms-3">
        <h4>Genre</h4>
        <p class="tag-green"><%= @event.category %></p>
      </div>
    </div>

    <div class="mt-4">
      <h4>Description</h4>
      <p><%= @event.description %></p>
    </div>


  </div>
  <div class="rounded-3 mt-5" style="width: 100%; height: 200px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
