<div class="container">
  <div class="mx-4">

    <div class="d-flex">
      <%= link_to root_path do %>
      <i class="fa-solid fa-chevron-left"></i>
      <% end %>

      <div class="ms-5">
        <h3><%= @user.nickname %></h3>
      </div>
    </div>

    <%# <%= @user.email %>
    <% if @user.photo.attached? == true %>
      <%= cl_image_tag @user.photo.key, alt: "user picture", class:"rounded-circle mx-auto d-block mt-4", width: 150, height: 150 %>
    <% end %>

    <% if @user != current_user %>


      <% if @first_user || @second_user %>
        <%= link_to "Chat", invite_invite_messages_path(@invite.first), class: "btn btn-primary" %>
      <% else %>
        <div class="d-grid gap-2 m-3 justify-content-center">
          <div data-controller="invite-button" data-action="click->invite-button#disable">
            <%= link_to "Invite", invites_path(user_id: @user.id), data: { turbo_method: :post }, class:"btn btn-primary" %>
          </div>
          <% end %>
        </div>
      <% end %>

    <div class="mt-5">
      <h4>Instrument</h4>
      <p class="tag"><%= @user.instrument %></p>
    </div>

    <div class="d-flex ms-4 mt-3 align-items-center">
      <div class="mt-25">
        <p>
          <% if @user.user_bands.any? %>
            <% @user.user_bands.each do |user_band| %>
              <li><%= link_to user_band.band.name, band_path(user_band.band) %></li>
            <% end %>
          <% else %>
            No band
          <% end %>
        </p>
      </div>
    </div>

    <div class="mt-3">
      <h4>Bio</h4>
      <p><%= @user.biography %></p>
    </div>

    <div class="mt-3">
      <h4>Genre</h4>
      <p class="tag"><%= @user.style %></p>
    </div>

    <div class="mt-3">
      <h4>What I want to play</h4>
      <div class="d-flex justify-content-evenly">
        <% if @user.projects.include?(",") %>
          <% @user.projects.split(",").each do |o| %>
          <p class="tag"><%= o %></p>
          <% end %>
        <% else %>
          <p class="tag"><%= @user.projects %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-3">
      <h4>How I want to play</h4>
      <div class="d-flex justify-content-evenly">
        <% if @user.objectives.include?(",") %>
          <% @user.objectives.split(",").each do |o| %>
          <p class="tag"><%= o %></p>
          <% end %>
        <% else %>
          <p class="tag"><%= @user.objectives %>
        <% end %>
      </div>
    </div>

    <div class="mt-3">
      <h4>Availability</h4>
      <div class="d-flex justify-content-evenly">
        <% if @user.availability.include?(",") %>
          <% @user.availability.split(",").each do |o| %>
          <p class="tag"><%= o %></p>
          <% end %>
        <% else %>
          <p class="tag"><%= @user.availability %>
        <% end %>
      </div>
    </div>

    <div class="mt-3">
      <h4>Frequency</h4>
      <div class="d-flex justify-content-evenly">
        <% if @user.frequency.include?(",") %>
          <% @user.frequency.split(",").each do |o| %>
          <p class="tag"><%= o %></p>
          <% end %>
        <% else %>
          <p class="tag"><%= @user.frequency %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-3">
      <h4>Recordings</h4>
      <div class="d-flex justify-content-evenly">
      <p class="tag"><i class="fa-solid fa-play"></i> Cover</p>
      <p class="tag"><i class="fa-solid fa-play"></i> Listen</p>
      </div>
    </div>

    <div class="mt-3">
      <h4>Playlist</h4>
      <div class="d-flex justify-content-evenly fs-5">
      <i class="fa-brands fa-spotify"></i>
      <i class="fa-brands fa-deezer"></i>
      <i class="fa-brands fa-soundcloud"></i>
      </div class="mb-4">
    </div>

  </div>
</div>
